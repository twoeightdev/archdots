#!/bin/bash

opts=$(echo -e "⏻ Poweroff\n⭘ Restart\n⚡ Suspend\n⏼ Logout")

sel_opts=$(echo -e "$opts" | dmenu -p "Bye "$USER"!")

case $sel_opts in
    "⏻ Poweroff") shutdown now;;
    # "━ Lock") slock & mpc pause;;
    "⭘ Restart") reboot;;
    "⚡ Suspend") systemctl suspend;;
    "⏼ Logout") pkill -KILL -u "$USER";;
esac
