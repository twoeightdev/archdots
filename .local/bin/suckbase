#!/bin/sh
git checkout main &&
make clean && rm -f config.h && git reset --hard origin/main && git pull &&
for branch in $(git for-each-ref --format='%(refname)' refs/heads/ | cut -d'/' -f3); do
    if [ "$branch" != "main" ];then
        git checkout $branch && git rebase --preserve-merges main
    fi
done
