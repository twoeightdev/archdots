#!/bin/sh
# Set wallpaper and copy to $HOME/.local/share/bg

bgloc="${XDG_DATA_HOME:-$HOME/.local/share/}/bg"

if [ -f "$1" ]; then
    cp "$1" "${XDG_DATA_HOME:-$HOME/.local/share/}/bg"
    notify-send -i ~/.local/share/bg "ï€¾ Wallpaper changed."
fi

xwallpaper --zoom "$bgloc"

