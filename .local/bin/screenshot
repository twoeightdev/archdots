#!/bin/sh
# Take screenshot
output="$HOME/.local/screenshot/$(date '+%G-%d-%b-%I:%M%p').png"

case "$(printf "Selected area\\nCurrent window\\nFullscreen" | dmenu -l 3 -i -p "Screenshot")" in
"Selected area") maim -u -s "${output}" && notify-send "ðŸ“¸ Screenshot taken." ;;
"Current window") maim -B -q -d 0.2 -i "$(xdotool getactivewindow)" "${output}" && notify-send "ðŸ“¸ Screenshot taken." ;;
"Fullscreen") maim -q -d 0.2 "${output}" && notify-send "ðŸ“¸ Screenshot taken." ;;
esac
