#!/bin/sh
# Wrapper for dotfiles
dots() { git --git-dir=$HOME/.config/.dotfiles --work-tree=$HOME "$@"; }
if [ $1 = 'up' ]; then
    dots pull &&
    dots update-index --assume-unchanged ~/LICENSE ~/README.md &&
    rm -rf ~/LICENSE ~/README.md
elif [ $1 = 'res' ]; then
    dots update-index --no-assume-unchanged ~/LICENSE ~/README.md &&
    dots checkout -f
else
    dots $*
fi
