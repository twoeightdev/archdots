#!/bin/sh
# Wrapper for dotfiles
dotfiles() { git --git-dir=$HOME/.config/.dots --work-tree=$HOME "$@"; }
if [ $1 = 'out' ]; then
    dotfiles pull &&
    dotfiles update-index --assume-unchanged ~/LICENSE ~/README.org ~/bootstrap.sh &&
    rm -rf ~/LICENSE ~/README.org ~/bootstrap.sh
elif [ $1 = 'in' ]; then
    dotfiles update-index --no-assume-unchanged ~/LICENSE ~/README.org ~/bootstrap.sh &&
    dotfiles checkout -f
else
    dotfiles $*
fi
