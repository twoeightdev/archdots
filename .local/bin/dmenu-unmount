#!/bin/sh -e
# Unmount disk
fe() {
    while read -r l; do
        set -- $l
        grep -iq "$2" /etc/fstab || echo "$1 $2"
    done
}
set -- $(lsblk -rno 'name,mountpoint' | grep ' /' | fe | dmenu -i -p 'Umount')
[ "$1" ]
sudo umount "$2"
[ -d "$HOME/.config/mnt/$1" ] && rmdir "$HOME/.config/mnt/$1"
notify-send "Unmounted $1" "$2"
